{
    "name": "jasny/db-mongo",
    "type": "library",
    "description": "Adds modern OOP DB patterns to the Mongo PHP extension",
    "keywords": ["database", "db", "mongo", "mongodb"],
    "license": "MIT",
    "homepage": "http://jasny.github.com/db-mongo",
    "authors": [
        {
            "name": "Arnold Daniels",
            "email": "arnold@jasny.net",
            "homepage": "http://www.jasny.net"
        }
    ],
    "support": {
        "issues": "https://github.com/jasny/db-mongo/issues",
        "source": "https://github.com/jasny/db-mongo"
    },
    "require": {
        "php": ">=7.1.0",
        "ext-mongodb": "^1.4.0",
        "jasny/db": "v3.x-dev as 3.0.0",
        "mongodb/mongodb": "^1.3"
    },
    "require-dev": {
        "jasny/php-code-quality": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Jasny\\DB\\Mongo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jasny\\DB\\Mongo\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpcs -p src",
            "phpstan analyse"
        ],
        "post-create-project-cmd": [
            "bash init.sh && rm init.sh"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
