{
    "name": "jasny/db-mongo",
    "type": "library",
    "description": "Adds modern OOP DB patterns to the Mongo PHP extension",
    "keywords": ["database", "db", "mongo", "mongodb"],
    "license": "MIT",
    "homepage": "http://jasny.github.com/db-mongo",
    "authors": [
        {
            "name": "Arnold Daniels",
            "email": "arnold@jasny.net",
            "homepage": "http://www.jasny.net"
        }
    ],
    "support": {
        "issues": "https://github.com/jasny/db-mongo/issues",
        "source": "https://github.com/jasny/db-mongo"
    },
    "require": {
        "php": ">=7.1.0",
        "ext-mongodb": "^1.4.0",
        "cypresslab/php-curry": "^0.5.0",
        "ipl/iterable": "dev-master",
        "jasny/db": "v3.x-dev",
        "jasny/entity": "dev-master",
        "jasny/php-functions": "dev-master as 4.2.0",
        "mongodb/mongodb": "^1.3"
    },
    "require-dev": {
        "jasny/php-code-quality": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Jasny\\DB\\Mongo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jasny\\DB\\Mongo\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpstan analyse",
            "phpunit",
            "phpcs -p src"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
